<Window x:Class="JourneyPalAdmin.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JourneyPalAdmin"
        mc:Ignorable="d"
        Title="Admin Dashboard" Height="600" Width="1000"
        WindowStartupLocation="CenterScreen"
        Background="#1E1E1E"
        Foreground="White"
        FontFamily="Segoe UI"
        FontSize="14">

    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="#FF5722" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Padding" Value="10 5" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect ShadowDepth="2" Opacity="0.5" />
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#424242" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderBrush" Value="#607D8B" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Padding" Value="5" />
        </Style>

        <Style TargetType="DataGrid">
            <Setter Property="Background" Value="#1E1E1E" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderBrush" Value="#607D8B" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="RowBackground" Value="#2E2E2E" />
            <Setter Property="AlternatingRowBackground" Value="#1E1E1E" />
            <Setter Property="HeadersVisibility" Value="Column" />
            <Setter Property="AutoGenerateColumns" Value="True" />
            <Setter Property="IsReadOnly" Value="True" />
            <Setter Property="GridLinesVisibility" Value="None" />
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#FF5722" Padding="20">
            <TextBlock Text="Admin Dashboard" 
                       FontSize="24" 
                       FontWeight="Bold" 
                       Foreground="White" 
                       VerticalAlignment="Center" />
        </Border>

        

        <Grid Grid.Row="1" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="2*" />
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Margin="0 0 20 0">
                <Button Content="Load Users" 
                        Click="LoadUsers_Click" 
                        Margin="0 0 0 10" />
                <Button Content="Refresh Token" 
                        Click="RefreshToken_Click" 
                        Margin="0 0 0 10" />
                <Button Content="Logout" 
                        Click="Logout_Click" />
                <Label Content="Enter username " FontSize="16" Foreground="White"/>
                <TextBox x:Name="UsernameTextBox" Margin="5" Width="150" />
                <Button Content="Delete by Username" Click="DeleteUserByUsername_Click" Margin="5" />
                <Label Content="Enter email " FontSize="16" Foreground="White"/>
                <TextBox x:Name="EmailTextBox" Margin="5" Width="150" />
                <Button Content="Delete by Email" Click="DeleteUserByEmail_Click" Margin="5" />
            </StackPanel>

            <Border Grid.Column="1" 
                    Background="#2E2E2E" 
                    CornerRadius="4" 
                    Padding="10">
                <DataGrid x:Name="UsersDataGrid" 
                          AutoGenerateColumns="True" 
                          HeadersVisibility="Column" />
            </Border>
        </Grid>
    </Grid>
</Window>
